@using DocHound.Classes;

@model DocHound.Models.Docs.TopicViewModel

@if (Model.SelectedTopic != null && (Model.SelectedTopic.PreviousTopic != null || Model.SelectedTopic.NextTopic != null))
{
    var url = $"{Context.Request.Scheme}://{Context.Request.Host}/";
    <div class="navigation-footer">
        @if (Model.SelectedTopic.PreviousTopic != null)
        {
            <div class="navigatePrevious">
                <a href="@(url)@TopicHelper.GetNormalizedName(Model.SelectedTopic.PreviousTopic.SlugSafe)" title="@Model.SelectedTopic.PreviousTopic.Title">Previous</a>
            </div>
        }
        @if (Model.SelectedTopic.NextTopic != null)
        {
            <div class="navigateNext">
                <a href="@(url)@TopicHelper.GetNormalizedName(Model.SelectedTopic.NextTopic.SlugSafe)" title="@Model.SelectedTopic.NextTopic.Title">Next</a>
            </div>
        }
        <div style="clear: both"></div>
    </div>
}